<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- set màu nền-->
    <solid
        android:color="#FFFFFF">
    </solid>
    <!--    đặt thuộc tính và độ rộng của đường viền-->
    <stroke
        android:width="2dp"
        android:color="#000000">
    </stroke>

    <!--        các thuộc tính cần chỉnh-->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">
    </padding>

    <!--    bán kính đường tròn ở 4 góc-->
    <corners
        android:radius="15dp">
    </corners>
</shape>